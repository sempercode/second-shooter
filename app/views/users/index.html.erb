<div class="user_all">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4">

				<% @users.each do |user| %>

					<table class="table">
						<tbody>
							<tr>
								<th>Email</th> 
								<td><%= mail_to(user.email) %> </td>
							</tr>
							<tr>
								<th>Name</th> 
								<td><%= link_to(user.first_name, user_path(user)) %> </td>
							</tr>
							<tr>
								<th>Website</th> 
								<td><%= user.website %> </td>
							</tr>
							<tr>
								<th>Location</th> 
								<td><%= user.location %> </td>
							</tr>
							<tr>
								<th>Hourly Rate</th> 
								<td><%= number_to_currency(user.hourly_rate) %> </td>
							</tr>
						</tbody>
					</table>

				<% end %>

			</div>
		</div>
	</div>
</div>

