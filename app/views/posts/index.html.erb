<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<h1 class="text-center">The Blog</h1>

			<%= @post.each do |post| %>

			<h2><%= link_to(post.title) %></h2><%= post.created_at %>

			<p><%= post.content %></p>

			<% end %>

		</div><!-- col-md-6 -->
	</div><!-- row -->
</div><!-- container -->