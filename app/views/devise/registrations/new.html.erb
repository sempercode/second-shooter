<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">	
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<h2>Sign Up</h2>
			<%= bootstrap_form_for @user, :html => { :class => "form-vertical" } do |f| %>

				<%= f.email_field :email, :autofocus => 'true' %>

			  <%= f.password_field :password, autocomplete: "off", :autofocus => 'true' %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i> <% end %>

			  <%= f.password_field :password_confirmation, autocomplete: "off", :autofocus => 'true' %>

				<%= f.text_field :first_name, :autofocus => 'true' %>

				<%= f.text_field :last_name, :autofocus => 'true' %>

				<%= f.text_field :website, :autofocus => 'true' %>

				<%= f.text_field :location, :autofocus => 'true' %>

				<%= f.text_field :hourly_rate, :autofocus => 'true' %>

				<%= f.submit "Sign up", :class => "col-md-3  btn btn-primary" %>
			<% end %>


			<%= render "devise/shared/links" %>

		</div><!-- col -->
	</div><!-- row -->
</div><!-- container -->



